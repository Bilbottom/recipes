%----------Title----------%

\newcommand{\recipetitle}{
    \vspace*{\baselineskip}
    {\LARGE \blue{\recipename} \hfill\normalsize\recipecreator}

    \vspace{-\baselineskip}\hrulefill

    \vspace{-0.5\baselineskip}\hfill {\footnotesize Prep \green{\preptime}, Cook \green{\cooktime}}
}

